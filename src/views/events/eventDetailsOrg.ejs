<%- include('../headerOrg.ejs'); %>
<div class="eventControlsHeaderContainer">
    <button class="eventSignInButton">Event Sign-In</button>
    <form action="/events/<%= event._id %>/edit" method="GET">
        <input type='submit' class="eventEditButton" value="Edit Event" />
    </form>
</div>

<div class="eventDetailsContainer">

    <h1 class="eventDetailsTitle"><%= event.title %></h1>

    <p class="eventDetailsDescLabel">Description: </p>
    <p class="eventDetailsDescData"><%= event.description %></p>

    <p class="eventDetailsFacLabel">Facilitator(s): </p>
    <p class="eventDetailsFacData"><%= event.facilitators%></p>

    <p class="eventDetailsDateLabel">Date: </p>
    <p class="eventDetailsDateData"><%= event.datetime %></p>

    <p class="eventDetailsTimeLabel">Time: </p>
    <p class="eventDetailsTimeData"><%= event.datetime %></p>

    <p class="eventDetailsLocLabel">Location: </p>
    <p class="eventDetailsLocData"><%= event.location %></p>

</div>

<form action="/events/<%= event._id %>/delete" method="POST">
    <input type='submit' class="eventDeleteButton" value="Delete Event">
</form>
<%- include('../footer.ejs'); %>