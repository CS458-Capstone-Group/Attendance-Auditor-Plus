<%- include("../headerOrg.ejs"); %>
<h1 class="formHeader">Edit Event</h1>
<form class="formContainer" action="/events/<%= event._id %>" method="POST">
    <label for="title" class="formElement1-1"> Event Title: </label>
    <input type="text" name="title" class="formElement1-2" required="required" value="<%= event.title %>">

    <label for="description" class="formElement2-1">Event Description: </label>
    <input type="textarea" name="description" class="formElement2-2" value="<%= event.description %>">

    <label for="datetime" class="formElement3-1">Event Datetime: </label>
    <input type="datetime-local" name="datetime" class="formElement3-2" required="required"
        value="<%= event.datetime %>">

    <label for="capacity" class="formElement4-1">Event Capacity: </label>
    <input type="text" name="capacity" class="formElement4-2" value="<%= event.capacity %>">

    <label for="location" class="formElement5-1">Event Location: </label>
    <input type="text" name="location" class="formElement5-2" value="<%= event.location %>">

    <input class="formElement6-2 formSubmitButton" type="submit" name="submitButton" id="submitButton" value="Save">
    </div>
</form <%- include("../footer.ejs"); %>